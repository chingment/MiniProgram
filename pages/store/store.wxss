.col-nav2 {
  border-top: 0px solid #f6f6f6;
  padding: 0rpx 18rpx;
}

.col-nav2 > .container>.item {
  display: flex;
  height: 120rpx;
  line-height: 120rpx;
}



.col-nav2  .item-icon {
  border-bottom: 0px solid #f6f6f6;
  width: 100rpx;
}

.col-nav2  .item-icon .icon-box {
  border-bottom: 0px solid #f6f6f6;
  width: 100%;
  text-align: left;
  align-items: center;
  display: flex;
  height: 100%;
}

.col-nav2  .item-icon image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
}

.col-nav2  .item-left {
  border-bottom: 1px solid #f6f6f6;
  flex: 1;
}

.col-nav2  .item-right {
  border-bottom: 1px solid #f6f6f6;
  width: 100px;
  overflow: hidden;
  flex: none;
  text-align: right;
}

.col-nav2  .item-more {
  width: 20rpx;
  overflow: hidden;
  text-align: right;
  flex: none;
}

.col-nav2  .item-more  image {
  width: 12rpx;
  height: 16rpx;
}

.col-nav2  .item-left .txt-h1 {
  height: 70rpx;
  line-height: 70rpx;
  text-align: left;
  display: block;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}

.col-nav2 > .container> .item-selected .item-left .txt-h1{ 
   color: #f18d00;
  
}

.col-nav2  .item-left  .txt-h2 {
  height: 40rpx;
  line-height: 40rpx;
  display: block;
  text-align: left;
  font-size: 26rpx;
  color: #999;
}




.col-nav2 .item-right .txt {
  height: 120rpx;
  line-height: 120rpx;
  text-align: right;
  display: block;
  font-weight: bold;
  font-size: 30rpx;
  padding-right: 8rpx;
}

.col-nav2  .item:last-child  .item-left, .col-nav2 .item:last-child  .item-right {
	border-bottom: 0px solid #f6f6f6;
}
