@import '../../common/common.wxss';
@import '../index/index.wxss';
@import '../productkind/productkind.wxss';
@import '../cart/cart.wxss';
@import '../personal/personal.wxss';

.main-tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 81rpx;
  overflow: hidden;
}

.main-tabbar-container {
  display: flex;
  flex-direction: row;
  font-size: 20rpx;
  color: #8a8a8a;
  border-top: 1rpx #dbdbdb solid;
}

.main-tabbar-item {
  float: left;
  flex: 1;
  text-align: center;
  overflow: hidden;
  position: relative;
  padding-top: 10rpx;
}

.hidden {
  display: none;
}

.main-tabbar-item-icon {
  width: 38rpx;
  height: 38rpx;
}

/*当前字体颜色*/

.main-tabbar-item-text {
  color: red;
}

.main-tabbar-item-number {
  width: 45rpx;
  height: 32srpx;
  border: 0 solid #f00;
  background-color: #f10b2e;
  color: #fff;
  position: absolute;
  right: 40rpx;
  border-radius: 30rpx;
  line-height: 34rpx;
  z-index: 999;
  top: 8rpx;
}
