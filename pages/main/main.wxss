.main-tabbar-nav {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 3.044rem;
  overflow: hidden;
  border-top: 1px #dbdbdb solid;
  background: #fff;
}

.main-tabbar-nav > .ct {
  padding: 0;
  margin: 0;
  height: 100%;
  overflow: hidden;
}

.main-tabbar-nav > .ct> .its {
  display: flex;
  font-size: 0.6rem;
  height: 100%;
}

.main-tabbar-nav > .ct> .its > .it {
  flex: 1;
  text-align: center;
  overflow: hidden;
  position: relative;
 padding: 0.4rem 0rem 0.2rem 0rem; 
 background:#f00;
}

.main-tabbar-nav .icon {
  width: 1.5rem;
  height: 1.5rem;
}

.main-tabbar-nav .title {
  color: #8a8a8a;
  height: .944rem;
}

.main-tabbar-nav .number {
  width: 1.2rem;
  height: 0.8rem;
  border: 0 solid #fff;
  background-color: #f00;
  color: #fff;
  position: absolute;
  right: 0rem;
  border-radius: 1.2rem;
  line-height: 0.8rem;
  z-index: 999;
  top: 0.2rem;
}
