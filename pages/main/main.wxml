<view>
  <view class="main-tabbar-contents">
    <view class="container">
      <scroll-view class='item {{tabBar[0].selected==false?"hidden":""}}' style="height:{{tabBarContentHeight}}px" scroll-y="true" bindscrolltoupper="refresh" bindscrolltolower="loadMore" data-reply-index="{{0}}" data-reply-name="{{tabBar[0].name}}">
        <template is="{{tabBar[0].name}}" data="{{...index}}" />
      </scroll-view>
      <scroll-view class='item {{tabBar[1].selected==false?"hidden":""}}' style="height:{{tabBarContentHeight}}px" scroll-y="true" bindscrolltoupper="refresh" bindscrolltolower="loadMore" data-reply-index="{{1}}" data-reply-name="{{tabBar[1].name}}">
        <template is="{{tabBar[1].name}}" data="{{...productKind}}" />
      </scroll-view>
      <scroll-view class='item {{tabBar[2].selected==false?"hidden":""}}' style="height:{{tabBarContentHeight}}px" scroll-y="true" bindscrolltoupper="refresh" bindscrolltolower="loadMore" data-reply-index="{{2}}" data-reply-name="{{tabBar[2].name}}">
        <template is="{{tabBar[2].name}}" data="{{...cart}}" />
      </scroll-view>
      <scroll-view class='item {{tabBar[3].selected==false?"hidden":""}}' style="height:{{tabBarContentHeight}}px" scroll-y="true" bindscrolltoupper="refresh" bindscrolltolower="loadMore" data-reply-index="{{3}}" data-reply-name="{{tabBar[3].name}}">
        <template is="{{tabBar[3].name}}" data="{{...personal}}" />
      </scroll-view>
    </view>
  </view>

