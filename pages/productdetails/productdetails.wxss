@import '../../common/common.wxss';

.details-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 1rpx #dbdbdb solid;
  overflow: hidden;
}

.details-nav .item-home {
  text-align: center;
  width: 160rpx;
  line-height: 100rpx;
  height: 88rpx;
}

.details-nav .item-home image {
  width: 38rpx;
  height: 38rpx;
}

.details-nav .item-cart {
  width: 160rpx;
  text-align: center;
  line-height: 100rpx;
  height: 88rpx;
}

.details-nav .item-cart image {
  width: 38rpx;
  height: 38rpx;
}

.details-nav .item-increase {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}

.details-nav .item-buy {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #fff;

}
