.tag-address {
  height: 2px;
}

.tag-address image {
  width: 100%;
  height: 2px;
  display: block;
}

.orderconfirm {
  margin-bottom: 88rpx;
  padding-bottom: 88rpx;
}

.sku-list {
  padding: 0rpx 5rpx;
}

.sku-list .item {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f8f8f8;
  padding: 5px 11px 5px 13px;
  height: 100rpx;
  line-height: 100rpx;
}

.sku-list .item:last-child{
  border-bottom: 0px solid #f8f8f8;
}

.sku-list .item >view {
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  overflow: hidden;
}

.sku-list .item-mainImg {
  width: 100rpx;
}

.sku-list .item-mainImg image {
  width: 100rpx;
  height: 100rpx;
}

.sku-list .item-skuname {
  flex: 1;
}

.sku-list .item-skuname text {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.sku-list .item-quantity {
  width: 100rpx;
  font-size: 30rpx;
  text-align: right;
}

.sku-list .item-price {
  width: 100rpx;
  font-size: 32rpx;
  text-align: right;
}

.coupontip {
  padding: 5rpx 10rpx;
  font-size: 32rpx;
}

.coupontip2 {
  background: #f50;
  color: #fff;
}
