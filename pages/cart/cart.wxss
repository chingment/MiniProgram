/*购物车*/

.cart-blocks {
  padding: 0;
  margin: 0;
}

.its-blocks>.it {
  padding: 0 0.5rem;
}

.its-blocks >.it>.it-tag {
  height: 1.3rem;
  line-height: 1.3rem;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}

.its-blocks >.it>.it-tag .icon {
  margin-right: 0.3rem;
  width: 1.1rem;
  height: 1.1rem;
}

.its-blocks >.it>.it-tag .name {
  font-size: 0.8rem;
}

.its-blocks >.it>.it-tag .more {
  width: 0.4rem;
  height: 0.56rem;
  margin-left: 0.3rem;
}

.its-blocks >.it>.it-skus >.it {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f8f8f8;
  padding: 10px 0px;
  line-height: 3.8rem;
  height: 3.8rem;
  align-items: center;
  justify-content: center;
}

.its-blocks >.it>.it-skus >.it:last-child {
  border-bottom: 0px;
}

.its-blocks >.it>.it-skus >.it>.it-l {
  width: 1.6rem;
  text-align: left;
}

.its-blocks >.it>.it-skus >.it>.it-l .img {
  width: 1.2rem;
  height: 1.2rem;
}

.its-blocks >.it>.it-skus >.it>.it-m {
  flex: 1;
}

.its-blocks >.it>.it-skus >.it>.it-m>.it-ml {
  float: left;
  width: 3.8rem;
  height: 3.8rem;
}

.its-blocks >.it>.it-skus >.it>.it-m>.it-ml .img {
  width: 100%;
  height: 100%;
}

.its-blocks >.it>.it-skus >.it>.it-m>.it-mr {
  flex: 1;
}

.its-blocks >.it>.it-skus >.it>.it-r {
  width: 5rem;
  text-align: center;
}

.its-blocks >.it>.it-skus >.it>.it-r .img {
  width: 1.4rem;
  height: 1.4rem;
}

.its-blocks .skuname {
  min-height: 1.1rem;
  max-height: 2.2rem;
  line-height: 1rem;
  font-size: 0.8rem;
  padding-top: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.its-blocks .sumprice {
  display: block;
  font-size: 0.8rem;
  height: 1.6rem;
  line-height: 1.6rem;
}

.its-blocks .quantity {
  width: 1.8rem;
  font-size: 0.8rem;
  display: block;
  float: right;
  line-height: 3.2rem;
}

.its-blocks .increase {
  display: block;
  float: right;
}

.its-blocks .decrease {
  display: block;
  float: right;
}

.cart-bottom {
  width: 100%;
  position: fixed;
  bottom: 3.044rem;
  background: #fff;
  display: flex;
  border-top: 1px solid #f8f8f8;
  z-index: 9999;
  line-height: 2.8rem;
  height: 2.8rem;
}

.cart-bottom .it-l {
  margin-left: 0.5rem;
  flex: 1;
  font-size: 0.8rem;
}

.cart-bottom .it-m {
  flex: 1;
  font-size: 1rem;
}

.cart-bottom .it-r {
  position: relative;
  font-size: 1.2rem;
  width: 8rem;
  text-align: center;
  color: #fff;
}
