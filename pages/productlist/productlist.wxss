page {
  overflow-y: hidden;
}

.scroll-tabbar {
  position: fixed;
  top: 0;
  z-index: 9999;
  height: 62rpx;
  background: #fff;
  overflow: hidden;
  border-bottom: 1rpx #dbdbdb solid;
}

.tabbar {
  height: 61rpx;
  line-height: 42rpx;
  width: 1900px;
  transition-timing-function: cubic-bezier(0.1, 0.57, 0.1, 1);
  transition-duration: 0ms;
}

.tabbar-content {
  margin-top: 62rpx;
}

.tabbar-item {
  height: 60rpx;
  line-height: 42rpx;
  width: 100px;
  float: left;
  display: block;
  overflow: hidden;
  background: #fff;
  text-align: center;
  font-size: 28rpx;
  z-index: 999;
}

