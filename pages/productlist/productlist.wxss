page {
  overflow-y: hidden;
}

.tabbar-scroll {
  position: fixed;
  top: 0;
  z-index: 9999;
  height: 2rem;
  background: #fff;
  overflow: hidden;
}

.tabbar-items {
  height: 2rem;
  line-height: 2rem;
  width: 1900px;
  transition-timing-function: cubic-bezier(0.1, 0.57, 0.1, 1);
  transition-duration: 0ms;
}

.tabbar-items .item {
  height: 2rem;
  line-height: 1.8rem;
  width: 100px;
  float: left;
  display: block;
  overflow: hidden;
  background: #fff;
  text-align: center;
  font-size: 1rem;
  z-index: 999;
}

.tabbar-items .item-seleced .title {
  display: block;
  color: #ffb101;
}

.tabbar-items .item-seleced .seleced-bottom {
  display: block;
  width: 2rem;
  text-align: center;
  background: #ffb101;
  box-shadow: 0px 2px 3px rgba(255, 176, 0, 0.55);
  border-radius: 3px;
  height: 2px;
  margin: auto;
}

.tabbar-contents {
  margin-top: 2rem;
}

.list-emptytips {
  text-align: center;
  margin-top: 3rem;
}

.list-emptytips .img {
  width: 5rem;
  height: 3.8rem;
}

.list-emptytips text {
  font-size: 0.8rem;
  color: #9d9d9d;
}

.carttips {
  width: 3.8rem;
  height: 3.8rem;
  border-radius: 3.8rem;
  float: right;
  background-color: #fff;
  position: fixed;
  bottom: 2rem;
  right: 10px;
  border: 0 solid #fff;
  text-align: center;
  align-items: center;
  justify-content: center;
  display: flex;
  -webkit-box-shadow: 0 0 16px rgba(0, 0, 0, 0.1);
  -moz-box-shadow: 0 0 16px rgba(0, 0, 0, 0.1);
  box-shadow: 0 0 16px rgba(0, 0, 0, 0.1);
}

.carttips .img {
  width: 2rem;
  height: 2rem;
}

.carttips .title {
  color: #8a8a8a;
}

.carttips .number {
  width: 1.4rem;
  height: 1.2rem;
  border: 0 solid #fff;
  background-color: #f00;
  color: #fff;
  position: absolute;
  right: .6rem;
  border-radius: 1.4rem;
  line-height: 1.2rem;
  z-index: 999;
  top: .3rem;
  font-size: 0.8rem;
}
