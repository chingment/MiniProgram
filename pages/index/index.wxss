.index {
  padding: 0rpx 18rpx;
}

.banner {
  height: auto;
  position: relative;
}

.banner-swipers {
  width: 100%;
  height: 260rpx;
  text-align: center;
}

.banner-swipers image {
  width: 100%;
  height: 100%;
  -webkit-border-radius: 12rpx;
  -moz-border-radius: 12rpx;
  border-radius: 12rpx;
  -webkit-box-shadow: 0 0 16rpx rgba(0, 0, 0, 0.25);
  -moz-box-shadow: 0 0 16rpx rgba(0, 0, 0, 0.25);
  box-shadow: 0 0 16rpx rgba(0, 0, 0, 0.25);
}

/*用来包裹所有的小圆点  */

.banner-dots {
  width: 750rpx;
  height: 36rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 0;
  bottom: 16rpx;
}

/*未选中时的小圆点样式 */

.banner-dot {
  width: 16rpx;
  height: 16rpx;
  margin-right: 26rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

/*选中以后的小圆点样式  */

.banner-active {
  width: 32rpx;
  height: 16rpx;
  background-color: #f18d00;
}

.banner .flex {
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  display: box;
  flex-wrap: wrap;
}

.banner .alignC {
  /*元素居中*/
  align-items: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -moz-align-items: center;
  -ms-align-items: center;
  -o-align-items: center;
}

.banner .flexC {
  -webkit-box-pack: center;
  justify-content: center;
  -webkit-justify-content: center;
  -moz-justify-content: center;
  -ms-justify-content: center;
  -o-justify-content: center;
}

.fc {
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  padding: 18rpx 0rpx;
  display: flex;
  flex-direction: row;
  -webkit-border-radius: 12rpx;
  -moz-border-radius: 12rpx;
  border-radius: 12rpx;
  -webkit-box-shadow: 0 0 16rpx rgba(0, 0, 0, 0.1);
  -moz-box-shadow: 0 0 16rpx rgba(0, 0, 0, 0.1);
  box-shadow: 0 0 16rpx rgba(0, 0, 0, 0.1);
}

.fc .item {
  flex: 1;
  text-align: center;
}

.fc .item-img {
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
}

.fc .item-title {
  height: 40rpx;
  line-height: 40rpx;
  display: block;
  text-align: center;
  font-size: 24rpx;
}

.tabbar-items-scroll {
  z-index: 9999;
  height: 62rpx;
  background: #fff;
  overflow: hidden;
}

.tabbar-items {
  height: 61rpx;
  line-height: 42rpx;
  width: 100%;
  transition-timing-function: cubic-bezier(0.1, 0.57, 0.1, 1);
  transition-duration: 0ms;
}

.tabbar-items .container {
  display: flex;
}

.tabbar-items .item {
  height: 60rpx;
  line-height: 42rpx;
  flex: 1;
  overflow: hidden;
  background: #fff;
  text-align: center;
  font-size: 28rpx;
  z-index: 999;
}

.tabbar-contents {
}

.tabbar-items .item {
  font-size: 24rpx;
}

.tabbar-items .item-seleced .title {
  display: block;
  margin-bottom: 10rpx;
  color: #ffb101;
  font-size: 28rpx;
}

.tabbar-items .item-seleced .seleced-bottom {
  display: block;
  width: 80rpx;
  text-align: center;
  margin-top: 5rpx;
  line-height: 20rpx;
  background: #ffb101;
  box-shadow: 0px 2px 3px rgba(255, 176, 0, 0.55);
  border-radius: 3px;
  height: 4rpx;
  margin: auto;
}

.tabbar-contents .item-bannerImgUrl image {
  height: 132rpx;
  width: 100%;
}
