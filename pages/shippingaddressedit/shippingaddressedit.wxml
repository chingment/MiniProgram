<form bindsubmit="formSubmit">
  <input name="hidden" class="hide" name="shippingAddress_id" value="{{shippingAddress.id}}" />
  <view class="col-form">
    <view class="container">

      <view class="col-form-item">
        <view class="item-middle">
          <input class="input" name="shippingAddress_receiver" placeholder="姓名" maxlength="20" value="{{shippingAddress.receiver}}" />
        </view>
      </view>
      <view class="col-form-item">
        <view class="item-middle">
          <input class="input" name="shippingAddress_phoneNumber" type="number" maxlength="11" placeholder="手机号码" value="{{shippingAddress.phoneNumber}}" />
        </view>
      </view>
      <view class="col-form-item">
        <view class="item-middle">
          <input class="input" name="shippingAddress_area" disabled='disabled' placeholder="省份，城市，区县" bindtap="choosearea" value="{{address.area}}" />
        </view>
      </view>
      <view class="col-form-item">
        <view class="item-middle">
          <input class="input" name="shippingAddress_address" placeholder="详细地址，如楼道，楼盘等"  value="{{shippingAddress.address}}" />
        </view>
      </view>
      <view class="col-form-item">
        <view class="item-middle">

          <view class="ownradio-box">
            <label class="radio" catchtap="isDefaultEvent"  >
              <image src='../../images/{{shippingAddress_isDefault==false?"checkedoff":"checkedon"}}.png'></image>
               <text >默认地址</text>
              <input name="hidden" class="hide" name="shippingAddress_isDefault" value="{{shippingAddress_isDefault}}" /> 
            </label>
          </view>

        </view>
      </view>
    </view>
  </view>
  <template is="area_select" data="{{showArea,resideprovince,residecity,country,currentTab,curr_pro,curr_cit,curr_cou}}" />


  <button class="bottom-btn bg-main" form-type="submit">保存</button>


</form>