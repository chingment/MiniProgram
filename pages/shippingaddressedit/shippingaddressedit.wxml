<import src="../../template/showToast.wxml" />
<template is="showToast" data="{{showToast: showToast}}" />

<import src="../../template/area_select.wxml" />
<form bindsubmit="formSubmit">
  <input name="hidden" class="hide" name="model_id" value="{{id}}" />
  <view class="col-form">
    <view class="container">

      <view class="col-form-item">
        <view class="item-middle">
          <input class="input" name="model_receiver" placeholder="姓名" maxlength="20" />
        </view>
      </view>
      <view class="col-form-item">
        <view class="item-middle">
          <input class="input" name="model_phoneNumber" type="mobile" maxlength="11" placeholder="手机号码" />
        </view>
      </view>
      <view class="col-form-item">
        <view class="item-middle">
          <input class="input" name="model_area" disabled='disabled' placeholder="省份，城市，区县" bindtap="choosearea" value="{{address.name}}" />
        </view>
      </view>
      <view class="col-form-item">
        <view class="item-middle">
          <input class="input" name="model_address" placeholder="详细地址，如楼道，楼盘等" />
        </view>
      </view>
      <view class="col-form-item">
        <view class="item-middle">
          <label class="radio" bindtap="radioCheck">
            <image src='../../images/{{model.isDefault==false?"checkedoff":"checkedon"}}.png'></image>
            <text>默认地址</text>
            <input name="hidden" name="model_isDefault" value="{{model_isDefault}}" />
          </label>
        </view>
      </view>
    </view>
  </view>

  <template is="area_select" data="{{showArea,resideprovince,residecity,country,currentTab,curr_pro,curr_cit,curr_cou}}" />



  <button class="bottom-btn bg-main" form-type="submit">保存</button>


</form>